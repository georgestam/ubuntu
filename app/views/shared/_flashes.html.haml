:sass

  .alert 
    margin: 0 auto
    width: 40%
    padding: 8px
    margin-bottom: 12px
    text-align: center
    font-size: 0.9em
    font-weight: bold

- if notice
  .alert.alert-info.alert-dismissible{role: "alert"}
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
      %span{"aria-hidden" => "true"} ×
    = notice
- if alert
  .alert.alert-warning.alert-dismissible{role: "alert"}
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
      %span{"aria-hidden" => "true"} ×
    = alert